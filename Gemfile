source 'https://rubygems.org'

# Specify your Ruby version here. You can change this to match your local setup.
ruby '3.2.2'

# Rails is the web framework used by this application.
gem 'rails', '~> 7.1.0'

# Use sqlite3 as the database for Active Record
gem 'sqlite3', '~> 1.6'

# Use Devise for user authentication
gem 'devise', '~> 4.9'

# Simple form builder for quickly creating forms
gem 'simple_form', '~> 5.3'

# Use bootstrap for some basic styling. The bootstrap gem ships CSS and JS files.
gem 'bootstrap', '~> 5.2'

group :development, :test do
  # Debugger friendly console for Rails
  gem 'byebug', platforms: [:mri, :mingw, :x64_mingw]
end